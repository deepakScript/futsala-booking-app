

generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  full_name  String
  email      String    @unique
  password   String
  phone      String?
  role       String    @default("user")
  created_at DateTime  @default(now())
}

model Futsal {
  id             Int        @id @default(autoincrement())
  name           String
  location       String
  contact_number String?
  price_per_hour Float
  image_url      String?
  created_at     DateTime   @default(now())
  timeSlots      TimeSlot[]
}

model TimeSlot {
  id            Int       @id @default(autoincrement())
  futsal_id     Int
  start_time    DateTime
  end_time      DateTime
  is_available  Boolean   @default(true)
  futsal        Futsal    @relation(fields: [futsal_id], references: [id])
}

